{
  "compilerOptions": {
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/web",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/__mocks__/**/*"]
}
